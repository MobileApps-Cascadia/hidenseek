<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cascadia.hidenseek.HostLogin"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="0.08" >

            <TextView
                android:id="@+id/loginMatchNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"
                android:text="@string/login_match_name"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/headings" />

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/loginMatchNameText"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_help" />

            <EditText
                android:id="@+id/loginMatchNameInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loginMatchNameText"
                android:layout_alignRight="@+id/ImageView01"
                android:layout_below="@+id/loginMatchNameText"
                android:layout_marginTop="5dp"
                android:ems="10" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08" >

            <TextView
                android:id="@+id/loginMatchTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"
                android:text="@string/login_match_type_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/headings" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/loginMatchTypeText"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_help" />

            <Spinner
                android:id="@+id/loginMatchTypeSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loginMatchTypeText"
                android:layout_alignRight="@+id/imageView2"
                android:layout_below="@+id/loginMatchTypeText"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.08" >

            <TextView
                android:id="@+id/loginPasswordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="14dp"
                android:text="@string/login_match_type_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/headings" />

            <ImageView
                android:id="@+id/ImageView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/loginPasswordText"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_help" />

            <EditText
                android:id="@+id/loginPasswordInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/loginPasswordText"
                android:layout_alignRight="@+id/ImageView02"
                android:layout_below="@+id/loginPasswordText"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:inputType="textPassword" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/btnHostLogin"
            android:layout_width="153dp"
            android:layout_height="149dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_host" />
        
    </LinearLayout>

</FrameLayout>

